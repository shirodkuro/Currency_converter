<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Source Currency Section -->
    <EditText
        android:id="@+id/editTextSourceAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Amount" />

    <Spinner
        android:id="@+id/spinnerSourceCurrency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Destination Currency Section -->
    <EditText
        android:id="@+id/editTextDestinationAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Converted Amount"
        android:enabled="true" />

    <Spinner
        android:id="@+id/spinnerDestinationCurrency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>